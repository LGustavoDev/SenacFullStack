// 2-) Faça um algoritmo que leia 10 números desordenados, ordene e depois exiba o resultado ordenado para o usuario


var vetor = [];

para (var i = 0; i < 10; i = i + 1) {
    var valor = leia("Digite o valor " + (i + 1) + ": ");
    vetor[i] = inteiro(valor);  
    escreva("Valor lido e armazenado na posição " + i + ": " + valor);
}

vetor = ordenar(vetor);

escreva("Vetor ordenado: " + vetor);
